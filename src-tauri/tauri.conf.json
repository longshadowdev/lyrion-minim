{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Lyrion Minim",
    "version": "0.2.7"
  },
  "tauri": {
    "allowlist": {
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/squeezelite",
            "sidecar": true,
            "args": [
              "-n",
              {
                "validator": "\\S+"
              },
              "-M",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/**"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "setResizable": true,
        "setDecorations": true,
        "setPosition": true,
        "setSize": true
      },
      "os": {
        "all": true
      }
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "lyrion-minim",
        "width": 440,
        "height": 700,
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lyrion-minim.app",
      "category": "Music",
      "shortDescription": "Lyrion Minim",
      "longDescription": "Lyrion Minim. A minimal desktop client for Lyrion Music Server.",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/squeezelite"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    }
  }
}